@model Garage3.Models.ViewModels.CheckInVehicleViewModel
@inject Garage3.Services.ISelectService typeSelect

@{
    ViewData["Title"] = "CheckInVehicle";
}

<h1>Park Your Vehicle</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckInVehicle" asp-controller="ParkedVehicles" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MemberID" class="control-label"></label>
                <select asp-for="MemberID" class="form-control" asp-items="@await typeSelect.GetMemberAsync()"></select>
                <span asp-validation-for="MemberID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleTypeID" class="control-label"></label>
                <select asp-for="VehicleTypeID" class="form-control" asp-items="@await typeSelect.GetTypeAsync()"></select>
                <span asp-validation-for="VehicleTypeID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RegNum" class="control-label"></label>
                <input asp-for="RegNum" class="form-control" />
                <span asp-validation-for="RegNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Make" class="control-label"></label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Park Your Vehicle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
