@model Garage3.Models.ViewModels.ParkedVehicleDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Parked Vehicle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.VehicleType)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.VehicleType.VehicleType)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Member)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Member.FullName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.RegNum)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.RegNum)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Color)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Color)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Make)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Make)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Model)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Model)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ArrivalTime)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ArrivalTime)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Period)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Period)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ParkingSpaces)</dt>
        <dd class="col-sm-10">
            @foreach (var parkingspace in Model.ParkingSpaces)
            {               
                    @parkingspace.ParkingSpaceNum<br />        
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
